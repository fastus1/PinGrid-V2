# ============================================
# PinGrid V2.0 - Production Environment Variables
# ============================================
# Copy this file to .env and customize for your environment

# Database Configuration
POSTGRES_DB=pingrid
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend Configuration
BACKEND_PORT=5000
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARS
JWT_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:5000

# CORS Configuration
# In production, set this to your actual frontend URL
CORS_ORIGIN=http://localhost:3000

# ============================================
# IMPORTANT SECURITY NOTES:
# ============================================
# 1. Change ALL passwords and secrets before deploying
# 2. Use strong random strings for JWT_SECRET (minimum 64 characters)
# 3. Update CORS_ORIGIN to your actual domain in production
# 4. Never commit the .env file to version control
# 5. Keep database credentials secure
# 6. Consider using Docker secrets for sensitive data in production
